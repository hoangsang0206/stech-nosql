@model IEnumerable<Warehouse>

@if(Model.Count() > 0)
{
    Warehouse firstWh = Model.First();

    <div class="page-dropdown select-warehouse">
        <div class="page-dropdown-btn" data-selected="@firstWh.WarehouseId">
            <span>@firstWh.WarehouseName</span>
            <i class="fa-solid fa-caret-down"></i>
        </div>
        <div class="page-dropdown-content">
            @foreach (Warehouse wh in Model)
            {
                <div class="page-dropdown-item @(wh.WarehouseId == firstWh.WarehouseId ? "selected" : "")" data-value="@wh.WarehouseId" data-text="@wh.WarehouseName">
                    <span>@wh.WarehouseName</span>
                </div>
            }
        </div>
    </div>
}