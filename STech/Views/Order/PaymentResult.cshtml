@{
    ViewData["Title"] = "Thanh toán thành công";
}

@model PaymentStatusVM

<section class="page-container-padding payment-status-page d-flex flex-column align-items-center justify-content-center">
    @if(Model.IsPaid)
    {
        <i style="font-size: 4rem; color: #22c55e" class="fa-regular fa-circle-check"></i>
        <h3 class="mt-3">Thanh toán thành công</h3>
        <p style="font-size: 1rem; text-align: center">Cảm ơn bạn đã mua hàng tại cửa hàng của chúng tôi!</p>
    }
    else
    {
        <i style="font-size: 4rem; color: #e30019" class="fa-solid fa-circle-exclamation"></i>
        <h3 class="mt-3">Thanh toán thất bại</h3>
        <p style="font-size: 1rem; text-align: center">Đã có lỗi xảy ra trong quá trình thanh toán!</p>
    }

    <div class="mt-3" style="border-radius: 0.3rem; border: 1px solid #ccc; padding: 0.8rem 1rem; width: 30rem; max-width: calc(100% - 1rem)">
        <div class="row m-0 p-0">
            <div class="col-12 col-sm-5" style="font-size: 1rem">Mã đơn hàng:</div>
            <div class="col-12 col-sm-7 text-end" style="font-size: 1.1rem; font-weight: 500">@Model.InvoiceId</div>
        </div>
        <div class="mt-2 row m-0 p-0">
            <div class="col-12 col-sm-5" style="font-size: 1rem">Tổng tiền:</div>
            <div class="col-12 col-sm-7 text-end" style="font-size: 1rem; font-weight: 500">@CurrencyFormatter.Format(Model.TotalAmount)</div>
        </div>
        <div class="mt-2 row m-0 p-0">
            <div class="col-12 col-sm-5" style="font-size: 1rem">Ngày thanh toán:</div>
            <div class="col-12 col-sm-7 text-end" style="font-size: 1rem; font-weight: 500">@Model.PaymentDate.ToString("dd/MM/yyyy HH:mm")</div>
        </div>
    </div>

    <button class="to-home-page-btn mt-3" onclick="window.location.href='/'">
        VỀ TRANG CHỦ
    </button>

</section>