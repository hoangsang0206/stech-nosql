@model AddAddressVM

<div class="form-container update-address">
    <div class="form-box">
        <div class="close-form">
            <i class="fa-solid fa-xmark"></i>
        </div>
        <h3 class="text-center mt-3 mb-4 fw-semibold">Cập nhật địa chỉ</h3>
        <form class="form-update-address">
            <input type="hidden" id="AddressId" />
            <div>
                <div>
                    <div class="form-group-header">
                        Thông tin khách hàng
                    </div>
                    <div>
                        <div>
                            <div class="form-input-box">
                                <input asp-for="@Model.RecipientName" type="text" id="UpdateRecipientName" class="form-input" />
                                <label class="input-label">Họ tên</label>
                            </div>
                            <span asp-validation-for="@Model.RecipientName"></span>
                        </div>
                        <div>
                            <div class="form-input-box">
                                <input asp-for="@Model.RecipientPhone" type="text" id="UpdateRecipientPhone" class="form-input" />
                                <label class="input-label">Số điện thoại</label>
                            </div>
                            <span asp-validation-for="@Model.RecipientPhone"></span>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="form-group-header">
                        Địa chỉ nhận hàng
                    </div>
                    <div>
                        <div>
                            <div class="form-input-box">
                                <select asp-for="@Model.CityCode" class="form-input city-select" id="update-city-select">
                                    @await Component.InvokeAsync("SelectOptions")
                                </select>
                            </div>
                            <span asp-validation-for="@Model.CityCode"></span>
                        </div>
                        <div>
                            <div class="form-input-box">
                                <select asp-for="@Model.DistrictCode" class="form-input district-select" id="update-district-select">
                                    <option value="" selected>Chọn quận/huyện</option>
                                </select>
                            </div>
                            <span asp-validation-for="@Model.DistrictCode"></span>
                        </div>
                        <div>
                            <div class="form-input-box">
                                <select asp-for="@Model.WardCode" class="form-input ward-select" id="update-ward-select">
                                    <option value="" selected>Chọn xã/phường</option>
                                </select>
                            </div>
                            <span asp-validation-for="@Model.WardCode"></span>
                        </div>
                        <div>
                            <div class="form-input-box">
                                <input asp-for="@Model.Address" id="UpdateAddress" type="text" class="form-input" />
                                <label class="input-label">Số nhà, địa chỉ</label>
                            </div>
                            <span asp-validation-for="@Model.Address"></span>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="form-group-header">
                        Loại địa chỉ
                    </div>
                    <div>
                        <div class="d-flex gap-3 mt-3">
                            <div>
                                <input type="radio" value="home" id="update-address-home" name="address-type" hidden checked />
                                <label for="update-address-home">
                                    <span class="address-type cursor-pointer">Nhà riêng</span>
                                </label>
                            </div>
                            <div>
                                <input type="radio" value="office" id="update-address-office" name="address-type" hidden />
                                <label for="update-address-office">
                                    <span class="address-type cursor-pointer">Văn phòng</span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div>
                <div class="d-flex gap-2 mt-1">
                    <button class="form-submit-btn page-btn-sm" type="submit">Cập nhật</button>
                    <button class="form-reset-btn" type="reset">Hủy</button>
                </div>
            </div>
        </form>
    </div>
</div>