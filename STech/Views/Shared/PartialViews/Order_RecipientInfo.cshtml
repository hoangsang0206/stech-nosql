@model AddAddressVM


<form class="form-recipient-info">
    <div>
        <div>
            <div class="form-group-header mt-0">
                Thông tin khách hàng
            </div>
            <div>
                <div>
                    <div class="form-input-box">
                        <input asp-for="@Model.RecipientName" type="text" value="@Model.RecipientName"
                               class="form-input @(!string.IsNullOrEmpty(Model.RecipientName) ? "input-valid" : "")" id="recipient-name" />
                        <label class="input-label">Họ tên</label>
                    </div>
                    <span asp-validation-for="@Model.RecipientName"></span>
                </div>
                <div>
                    <div class="form-input-box">
                        <input asp-for="@Model.RecipientPhone" type="text" value="@Model.RecipientPhone"
                               class="form-input @(!string.IsNullOrEmpty(Model.RecipientPhone) ? "input-valid" : "")" id="recipient-phone" />
                        <label class="input-label">Số điện thoại</label>
                    </div>
                    <span asp-validation-for="@Model.RecipientPhone"></span>
                </div>
            </div>
        </div>
        <div>
            <div class="form-group-header">
                Địa chỉ nhận hàng
            </div>
            <div>
                <div class="row m-0 p-0">
                    <div class="col-12 col-lg-4 m-0 p-0">
                        <div class="form-input-box">
                            <select asp-for="@Model.CityCode" class="form-input city-select" id="recipient-city">
                                @await Component.InvokeAsync("SelectOptions")
                            </select>
                        </div>
                        <span asp-validation-for="@Model.CityCode"></span>
                    </div>
                    <div class="col-12 col-lg-4 m-0 p-0 ps-lg-2">
                        <div class="form-input-box">
                            <select asp-for="@Model.DistrictCode" class="form-input district-select" id="recipient-district">
                                <option value="" selected>Chọn quận/huyện</option>
                            </select>
                        </div>
                        <span asp-validation-for="@Model.DistrictCode"></span>
                    </div>
                    <div class="col-12 col-lg-4 m-0 p-0 ps-lg-2">
                        <div class="form-input-box">
                            <select asp-for="@Model.WardCode" class="form-input ward-select" id="recipient-ward">
                                <option value="" selected>Chọn xã/phường</option>
                            </select>
                        </div>
                        <span asp-validation-for="@Model.WardCode"></span>
                    </div>
                </div>
                <div>
                    <div class="form-input-box">
                        <input asp-for="@Model.Address" type="text" value="@Model.Address"
                               class="form-input @(!string.IsNullOrEmpty(Model.Address) ? "input-valid" : "")" id="recipient-address" />
                        <label class="input-label">Số nhà, địa chỉ</label>
                    </div>
                    <span asp-validation-for="@Model.Address"></span>
                </div>
            </div>
        </div>
    </div>
</form>