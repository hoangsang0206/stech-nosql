<div class="form-container upload-image">
    <div class="form-box">
        <h3 class="text-center mt-3 mb-4 fw-semibold">Upload hình ảnh</h3>
        <form method="POST" class="form-upload-image">
            <div class="form-error"></div>
            <input type="file" id="user-image" accept="image/*" hidden />
            <input type="file" id="user-image-cropped" accept="image/*" hidden />
            <div class="d-flex align-items-center justify-content-center">
                <div class="drag-and-click-upload-image d-flex flex-column align-items-center justify-content-center">
                    <i class="fa-solid fa-cloud-arrow-up"></i>
                    <p>Tài lên hoặc kéo hình ảnh vào đây</p>
                </div>
                <div class="preview-image-wrapper flex-column align-items-center justify-content-center">
                    <img id="preview-image" />
                    <div class="w-100">
                        <button type="button" class="click-choose-image">Chọn hình ảnh khác</button>
                    </div>
                </div>
            </div>
            <div class="upload-progressbar d-flex gap-1 align-items-center justify-content-between">

            </div>
            <div class="d-flex gap-2 mt-1">
                <button class="form-submit-btn page-btn-sm" type="submit" disabled>Cập nhật</button>
                <button class="form-reset-btn" type="reset">Hủy</button>
            </div>
        </form>
    </div>
</div>

<div class="form-container edit-image">
    <div class="form-box">
        <form class="form-edit-image">
            <div class="edit-image-wrapper d-flex align-items-center justify-content-center mt-3 mx-3">
                <img id="image-to-edit" />
            </div>
            <div class="d-flex gap-2 mt-1">
                <button class="form-submit-btn page-btn-sm" type="submit">Xác nhận</button>
                <button class="form-reset-btn" type="reset">Hủy</button>
            </div>
        </form>
    </div>
</div>